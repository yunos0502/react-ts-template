{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["dom", "es2017"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es5",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@hooks/*": ["hooks/*"],
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["**/*.ts", "**/*.tsx"]
}
